<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="210dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    tools:context=".MainActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/reg_rectangle"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_margin="9dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.6"
        android:background="@drawable/registration_rectangle"
        app:layout_constraintDimensionRatio="1:0"
        />

    <TextView
        android:id="@+id/nameOfTest"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/Test1"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@+id/reg_rectangle"
        app:layout_constraintStart_toStartOf="@+id/reg_rectangle"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintEnd_toEndOf="@+id/reg_rectangle"
        />


    <TextView
        android:id="@+id/themeOfTEst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ThemeOfTest"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/nameOfTest"
        app:layout_constraintStart_toStartOf="@+id/reg_rectangle"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintEnd_toEndOf="@+id/reg_rectangle"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Start"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:background="@drawable/btn_registration"
        app:layout_constraintBottom_toBottomOf="@id/reg_rectangle"
        app:layout_constraintStart_toStartOf="@id/reg_rectangle"
        app:layout_constraintEnd_toEndOf="@id/reg_rectangle"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintDimensionRatio="5:1"
        android:text="@string/Start"
        android:textSize="13sp"
        android:layout_margin="13dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>