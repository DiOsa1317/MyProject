<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">


<View
android:id="@+id/main_rectangle"
android:layout_width="0dp"
android:layout_height="0dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintHeight_percent="0.50"
android:background="@drawable/rectangle_1_cap"
    />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/main_rectangle"
        app:layout_constraintGuide_percent="0.03"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintGuide_percent="0.03"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintGuide_percent="0.97"
        />

    <ImageView
        android:id="@+id/reader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:src="@drawable/book_reader_icon"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        />

    <TextView
        android:id="@+id/greetYou"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/Greeting"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@+id/reader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/reg_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/greetYou"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintHeight_percent="0.50"
        android:background="@drawable/registration_rectangle"
        android:gravity="center"
        app:layout_constraintDimensionRatio="1:1.2"
        android:fitsSystemWindows="true"
        />

    <TextView
        android:id="@+id/go_into"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:text="@string/Go_into"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/reg_rectangle"
        app:layout_constraintStart_toStartOf="@+id/reg_rectangle"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintEnd_toEndOf="@+id/reg_rectangle"
        android:fitsSystemWindows="true"
        />

    <TextView
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:text="@string/Login"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/go_into"
        app:layout_constraintStart_toStartOf="@+id/reg_rectangle"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintEnd_toEndOf="@+id/reg_rectangle"
        android:fitsSystemWindows="true"
        />

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:text="@string/Login"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/reg_rectangle"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintEnd_toEndOf="@+id/reg_rectangle"
        android:fitsSystemWindows="true"
        />

    <TextView
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:text="@string/Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/etLogin"
        app:layout_constraintStart_toStartOf="@+id/reg_rectangle"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintEnd_toEndOf="@+id/reg_rectangle"
        android:fitsSystemWindows="true"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:text="@string/Password"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/reg_rectangle"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintEnd_toEndOf="@+id/reg_rectangle"
        android:fitsSystemWindows="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/into"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:background="@drawable/btn_into"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="@id/reg_rectangle"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintDimensionRatio="3:1"
        android:text="@string/Into"
        android:textSize="16sp"
        android:fitsSystemWindows="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgot_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:text="@string/Forgot_password"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginStart="15dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        app:layout_constraintStart_toEndOf="@+id/into"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintEnd_toEndOf="@+id/reg_rectangle"
        android:fitsSystemWindows="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/btn_registration"
        app:layout_constraintBottom_toBottomOf="@id/reg_rectangle"
        app:layout_constraintStart_toStartOf="@id/reg_rectangle"
        app:layout_constraintEnd_toEndOf="@id/reg_rectangle"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintDimensionRatio="7:1"
        android:text="@string/Registration"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"
        android:fitsSystemWindows="true"
        />




</androidx.constraintlayout.widget.ConstraintLayout>